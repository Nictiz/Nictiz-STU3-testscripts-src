<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="server">
    <id value="xis-1-7-serve-all-vitalsign-observation"/>
    <version value="stu3-2.0"/>
    <name value="SelfMeasurements - XIS Server - Scenario 1.7 - Serve all VitalSign Observation resources"/>
    <description value="Scenario 1.7 - Serve all VitalSign Observation resources"/>
    <nts:patientTokenFixture href="selfmeasurements-nl-core-patient-XXX-Bourgonjee-token.xml"/>
    <nts:includeDateT value="yes"/>
    
    <test id="scenario1-7-serve-all-vitalsign-observation">
        <name value="Scenario 1.7"/>
        <description value="Serve all VitalSign Observation resources"/>
        <nts:include value="medmij/test.searchWithParams.xis" scope="common">
            <nts:with-parameter name="resource" value="Observation"/>
            <nts:with-parameter name="params" value="?category=vital-signs"/>
        </nts:include>
        <nts:include value="medmij/assert.successfulSearch.response" scope="common"/>
        <nts:include value="assert.numResources.response" scope="common">
            <nts:with-parameter name="resource" value="Observation"/>
            <nts:with-parameter name="count" value="6"/>
        </nts:include>
    </test>
</TestScript>
