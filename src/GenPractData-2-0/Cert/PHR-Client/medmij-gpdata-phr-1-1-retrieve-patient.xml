<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript" nts:scenario="client">
    <id value="phr-1-1-retrieve-patient"/>
    <version value="stu3-2.0"/>
    <name value="General Practitioner Data - PHR Client - Scenario 1.1 - Retrieve Patient"/>
    <description value="Scenario 1.1 - Retrieve Patient"/>
    <nts:patientTokenFixture href="gpdata-nl-core-patient-XXX-Cevat-token.xml"/>
    
    <test id="scenario1-1-retrieve-patient">
        <name value="Scenario 1.1 - Retrieve Patient"/>
        <description value="Scenario 1.1 - Query Patient resource of person 1."/>
        <nts:include value="medmij/PHR-searchWithParams" scope="common">
            <nts:with-parameter name="resource"
                value="Patient"/>
            <nts:with-parameter name="params" value="?_include=Patient:general-practitioner"/>
        </nts:include>
        <nts:include value="assert-responseSearchBundleSuccess" scope="common"/>
        <nts:include value="assert-returnCount" scope="common">
            <nts:with-parameter name="resource" value="Patient"/>
            <nts:with-parameter name="count" value="1"/>
        </nts:include>
        <nts:include value="assert-returnCount" scope="common">
            <nts:with-parameter name="resource" value="Practitioner"/>
            <nts:with-parameter name="count" value="1"/>
        </nts:include>   
    </test>
</TestScript>
