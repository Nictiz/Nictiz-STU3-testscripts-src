<?xml version="1.0" encoding="UTF-8"?>
<!--
    XIS test to successfully hande a transaction operation, to be added to `TestScript.test`.
    It is expected that the "patient-token-id" variable is set.
    @param sourceId - The id of the Transaction Bundle fixture to send to the XIS. 
-->
<nts:component xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript">
    <action>
        <operation>
            <type>
                <system value="http://hl7.org/fhir/testscript-operation-codes"/>
                <code value="transaction"/>
            </type>
            <description value="Test XIS server to handle a Bundle of type transation with all the required FHIR resources."/>
            <contentType value="xml"/>
            <destination value="1"/>
            <origin value="1"/>
            <requestHeader>
                <field value="Authorization"/>
                <value value="${patient-token-id}"/>
            </requestHeader>
            <nts:include value="medmij/header.request.MedMijRequestId" scope="common"/>
            <sourceId value="{$sourceId}"/>
        </operation>
    </action>
    <nts:include value="assert.response.success" scope="common"/>
    <nts:include value="medmij/assert.response.bundleContent" scope="common"
         bundleType="transaction-response"/>
</nts:component>