<?xml version="1.0" encoding="UTF-8"?>
<!--
    Search for a specific resource. It is expected that the "patient-token-id" variable is set.
    @param resource - The resource to search for.
    @param description - The description of the search operation.
-->
<nts:component xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript">
    <action>
        <operation>
            <type>
                <system value="http://hl7.org/fhir/testscript-operation-codes"/>
                <code value="search"/>
            </type>
            <resource value="{$resource}"/>
            <description value="{$description}"/>
            <destination value="1"/>
            <origin value="1"/>
            <requestHeader>
                <field value="Authorization"/>
                <value value="${patient-token-id}"/>
            </requestHeader>
            <nts:include value="medmij/header.request.MedMijRequestId" scope="common"/>
        </operation>
    </action>
</nts:component>
