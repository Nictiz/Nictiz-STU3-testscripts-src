<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="server">
    <id value="xis-3-2-receive-image"/>
    <version value="stu3-2.0"/>
    <name value="PDFA - XIS Client - Scenario 3.2 - Receive Two Documents"/>
    <description value="Scenario 3.2 - Receive Two Document of XXX-Ellens."/>
    <nts:patientTokenFixture href="pdfa-nl-core-patient-XXX-Ellens-token.xml"/>
    <nts:fixture id="scenario-3-2-bundle-fixture"
        href="resources/medmij-pdfa-Bundle-kwalificatie2.xml"/>
    <nts:includeDateT value="yes"/>

    <test id="scenario3-2-receive-two-documents">
        <name value="Scenario 3.2"/>
        <description value="Receive two documents in a transaction Bundle"/>
        <nts:include value="operation-create-bundle-transaction" contentType="xml"
            sourceId="scenario-3-2-bundle-fixture"/>
        <nts:include value="assert.success.response" scope="common"/>
        <nts:include value="medmij/assert.bundleContent.response" scope="common"
            bundleType="transaction-response"/>
        <nts:include value="assert.numResources.response" scope="common"
            resource="DocumentManifest" count="1"/>
        <nts:include value="assert.numResources.response" scope="common"
            resource="DocumentReference" count="2"/>
        <nts:include value="assert.numResources.response" scope="common"
            resource="Binary" count="2"/>
        <nts:include value="assert.numResources.response" scope="common"
            resource="Patient" count="1"/>
    </test>
</TestScript>
