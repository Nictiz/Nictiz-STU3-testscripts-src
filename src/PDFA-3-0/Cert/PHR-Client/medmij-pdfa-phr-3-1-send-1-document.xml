<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="client">
    <id value="phr-3-1-send-image"/>
    <version value="stu3-2.0"/>
    <name value="PDFA - PHR Client - Scenario 3.1 - Send One Document"/>
    <description value="Scenario 3.1 - Send One Document of XXX-Ellens."/>

    <nts:patientTokenFixture href="pdfa-nl-core-patient-XXX-Ellens-token.xml"/>
    <nts:fixture id="scenario-3-1-bundle-fixture"
        href="resources/medmij-pdfa-Bundle-kwalificatie1.xml"/>
    <nts:includeDateT value="yes"/>

    <test id="scenario3-1-send-one-document">
        <name value="Scenario 3.1"/>
        <description value="Send one document in a transaction Bundle"/>
        <nts:include value="operation.phr.transaction" sourceId="scenario-3-1-bundle-fixture"/>
        
        <nts:include value="assert.response.success" scope="common"/>
        <nts:include value="medmij/assert.request.general" scope="common"/>
        <nts:include value="medmij/assert.request.bundleContent" scope="common"/>
        <action>
            <assert>
                <description value="Confirm that request Bundle is of type transaction."/>
                <direction value="request"/>
                <expression value="Bundle.type = 'transaction'"/>
            </assert>
        </action>
        <nts:include value="assert.request.numResources" scope="common"
            resource="DocumentReference" count="1"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Binary" count="1"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Patient" count="1"
        />
    </test>
</TestScript>
