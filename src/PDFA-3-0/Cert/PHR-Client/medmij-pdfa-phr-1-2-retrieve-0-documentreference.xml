<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="client">
    <id value="phr-1-2-retrieve-0-documentreference"/>
    <version value="stu3-2.0"/>
    <name value="PDFA - PHR Client - Scenario 1.2 - Retrieve 0 DocumentReference resources"/>
    <description
        value="Scenario 1.2 - Retrieve DocumentReference resources of XXX-Baltus with date filter."/>
    <nts:patientTokenFixture href="pdfa-nl-core-patient-XXX-Baltus-token.xml"/>
    <nts:includeDateT value="yes"/>

    <test id="scenario1-2-retrieve-3-documentreference">
        <name value="Scenario 1.2"/>
        <description
            value="Query DocumentReference resources that have an indexed/created period from T-730 to T-365 and have a 'current' status."/>
        <nts:include value="medmij/test.phr.searchWithParams" scope="common"
            resource="DocumentReference"
            params="?status=current&amp;indexed=ge${DATE, T, D, -730}&amp;indexed=le${DATE, T, D, -365}"/>
        <nts:include value="canary-assert.response.successfulSearch" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="DocumentReference" count="0"/>
        <nts:include value="assert.response.noEntries" scope="common"/>
    </test>
</TestScript>
