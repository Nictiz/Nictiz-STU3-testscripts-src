<?xml version="1.0" encoding="UTF-8"?>
<!--
    Internal component to perform an update of the Task.
    @param expectedStatus: The expected `.status` of the Task.
    @param direction: The direction that should be tested (request/response).
    @param taskUpdateFixtureId: The fixture id to use to update the Task.
-->
<nts:component xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript">
    <action>
        <operation>
            <type>
                <system value="http://hl7.org/fhir/testscript-operation-codes"/>
                <code value="update"/>
            </type>
            <resource value="Task"/>
            <description value="Test sending XIS to handle an update to the eOverdracht Task"/>
            <destination value="1"/>
            <origin value="1"/>
            <params value="/${task-id}"/>
            <requestHeader>
                <!-- 0..* Each operation can have one or more header elements -->
                <field value="Authorization"/>
                <!-- 1..1 HTTP header field name: OAuth access token -->
                <value value="${patient-token-id}"/>
                <!-- 1..1 HTTP headerfield value: UUID4 -->
            </requestHeader>
            <sourceId value="{$taskUpdateFixtureId}"/>
        </operation>
    </action>
    
    <nts:profile id="eOverdracht-Task" value="http://nictiz.nl/fhir/StructureDefinition/eOverdracht-Task"/>
    <action>
        <assert>
            <description value="Confirm that the Task conforms to the eOverdracht Task profile"/>
            <direction value="{$direction}"/>
            <validateProfileId value="eOverdracht-Task"/>
        </assert>
    </action>
    
    <action>
        <assert>
            <description value="Confirm that Task.status has been changed to '{$expectedStatus}'"/>
            <direction value="{$direction}"/>
            <expression value="Task.status = '{$expectedStatus}'"/>
        </assert>
    </action>
</nts:component>
