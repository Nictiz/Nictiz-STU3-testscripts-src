<?xml version="1.0" encoding="UTF-8"?>
<!--
    Generic (internal) component for tests specific to request (search) Bundles, according to the Nictiz FHIR IG.
-->
<nts:component  xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript">
    <nts:include href="_assert-requestBundleContent-core.xml"/>
    <action>
        <assert>
            <description value="Confirm that all posted resources except Binary contain a meta.profile tag."/>
            <direction value="request"/>
            <expression value="Bundle.entry.resource.where(is(Binary).not()).where(meta.profile.empty()).empty()"/>
        </assert>
    </action>
</nts:component>
