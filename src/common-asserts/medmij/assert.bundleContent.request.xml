<?xml version="1.0" encoding="UTF-8"?>
<!--
    Generic component to test the content of request (search) Bundles in a MedMij context. It builds upon the common
    asserts defined for the Nictiz FHIR IG. 
-->
<nts:component  xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript">
    <nts:include value="_assert.bundleContent-core.request" scope="common"/>
    <nts:include value="_assert.bundleContent-core.general" scope="common">
        <nts:with-parameter name="direction" value="request"/>
    </nts:include>
    <nts:include value="_assert.bundleContent.request" scope="common"/>
    <nts:include value="_assert.bundleContent.general" scope="common">
        <nts:with-parameter name="direction" value="request"/>
    </nts:include>
    <nts:include value="medmij/_assert.bundleContent.general" scope="common">
        <nts:with-parameter name="direction" value="request"/>
    </nts:include>
</nts:component>
