<?xml version="1.0" encoding="UTF-8"?>
<!--
    Generic component to test the content of response Bundles in a MedMij context. It builds upon the common
    asserts defined for the Nictiz FHIR IG. 
-->

<nts:component  xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript">
    <nts:include value="_assert.response.bundleContent" scope="common"/>
    <nts:include value="_assert.general.bundleContent" scope="common">
        <nts:with-parameter name="direction" value="response"/>
    </nts:include>
    <nts:include value="medmij/_assert.general.bundleContent" scope="common">
        <nts:with-parameter name="direction" value="response"/>
    </nts:include>
</nts:component>
