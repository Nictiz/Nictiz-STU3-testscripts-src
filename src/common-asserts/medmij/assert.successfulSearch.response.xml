<?xml version="1.0" encoding="UTF-8"?>
<nts:component  xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript">
    <nts:include value="assert.success.response" scope="common"/>
    <nts:include value="medmij/assert.bundleContent.response" scope="common"/>
    <nts:include value="_assert.searchBundleContent.response" scope="common"/>
    <action>
        <assert>
            <description value="Confirm that Bundle does not use Burgerservicenummer (BSN) in the self link."/>
            <direction value="response"/>
            <expression value="Bundle.link.url.contains('http://fhir.nl/fhir/NamingSystem/bsn') = false"/>
        </assert>
    </action>
</nts:component>

